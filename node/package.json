{
  "name": "@gcanvas/node",
  "version": "1.2.2",
  "description": "gcanvas for node developer",
  "dependencies": {
    "bindings": "~1.2.1",
    "node-addon-api": "^1.0.0"
  },
  "scripts": {
    "install": "./script/install.sh",
    "dev": "cmake-js  -D build",
    "clean": "cmake-js clean",
    "debug": "cmake-js -D build",
    "compile": "cmake-js compile --CDCORE_DIR=../core/",
    "test": "node --expose-gc ./examples/$case",
    "before-headless": "export DISPLAY=:99.0 && Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 &",
    "test-headless": "npm run before-headless && npm run test"
  },
  "main": "export.js",
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "node",
    "GCanvas",
    "2D",
    "Graphic",
    "Light"
  ]
}
